{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "experimentalDecorators": true,
    "lib": ["es2019", "ESNext.Array", "DOM"],
    "plugins": [],
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
